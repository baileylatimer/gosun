{% schema %}
{
  "name": "LP Features",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "LP Features"
    }
  ],
  "presets": [
    {
      "category": "Content",
      "name": "LP Features"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Feature Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Feature Image"
        },
        {
          "type": "checkbox",
          "id": "reverse_row",
          "label": "Reverse Row",
          "default": false
        }
      ]
    }
  ]
}
{% endschema %}

<div class="lp-features-section">
  <div class="lp-container">
    <h2>{{ section.settings.title }}</h2>
    <div class="lp-row">
      {% for block in section.blocks %}
      <div class="feature-item {% if block.settings.reverse_row %}reverse-row{% endif %}">
        <div class="feature-content scroll-trigger animate--slide-in">
          <div class="feature-image-wrapper scroll-trigger animate--slide-in">
            <img class="feature-image" src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
          </div>
          <div class="feature-text scroll-trigger animate--slide-in">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.lp-features-section {
  width: 100%;
  padding: 20px 0;
}

.lp-container {
  width: 100%;
}

.lp-row {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.feature-item {
  width: 100%;
  padding: 0 15px;
  box-sizing: border-box;
  margin-bottom: 20px;
  display: flex;
}


.reverse-row .feature-content {
    display: flex;
    justify-content: space-between;
    flex-direction: row-reverse;
}  

.feature-content {
    display: flex;
    align-items: center;
    width: 100%;
    opacity: 0;
    animation: slideFromBottom 2.5s ease-in-out forwards;
    justify-content: flex-start;
}

.feature-image-wrapper {
  width: 60%;
}

.feature-image {
  width: 100%;
}

.feature-text.scroll-trigger.animate--slide-in {
  max-width: 540px;
  padding-left: 50px;
  padding-right: 50px;
}

.feature-text.scroll-trigger.animate--slide-in h3 {
  font-size: 40px;
  line-height: 47px;
  font-weight: 700;
}

.feature-text.scroll-trigger.animate--slide-in p {
  font-size: 30px;
  line-height: 40px;
}

.reverse-row .feature-text.scroll-trigger.animate--slide-in {
  text-align: left; /* Align text to the left */
}
.lp-container h2 {
    font-size: 50px !important;
    line-height: 65px;
    margin-top: 60px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 60px;
    text-align: center;
}
.lp-features-section {
    background-color: #ffffff;
}
/* Apply opacity for elements with animate--fade-in or animate--slide-in classes */
@media (prefers-reduced-motion: no-preference) {
  .scroll-trigger.animate--fade-in,
  .scroll-trigger.animate--slide-in {
    opacity: .01; /* Adjust opacity as needed */
  }
}
@media (max-width: 768px) {
  .feature-content, .feature-item.reverse-row .feature-content {
    flex-direction: column;
}
  .feature-image-wrapper {
    width: 100%;
}
  .feature-text.scroll-trigger.animate--slide-in {
    padding-left: 0px;
    padding-right: 0px;
            margin-top: 20px;
        margin-bottom: 20px;
}
  .feature-text.scroll-trigger.animate--slide-in h3 {
    font-size: 30px;
    line-height: 40px;
    font-weight: 700;
}
  .feature-text.scroll-trigger.animate--slide-in p {
    font-size: 20px;
    line-height: 30px;
}
}
</style>
