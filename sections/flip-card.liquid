    width: calc(100% / 1 - 12.5px);
    margin-bottom: 20px;
  }
  .shopify-section#shopify-section-template--15144452391006__flip_card_qJ6JyA .card {
    width: calc(100% / 3 - 12.5px);
    margin-bottom: 20px;
  }  
  div#shopify-section-template--15144452391006__flip_card_CGFMCY .card__face--front h2 {
    /* float: right;
    text-align: left;
    padding-left: 0px !important;
    padding-right: 0px !important; 
    margin-right: 10%;
    width: -webkit-fill-available; */
    max-width: 500px; 
    padding-left: 40px;
    padding-right: 40px;
}
    div#shopify-section-template--15144452391006__flip_card_CGFMCY .card-content {
    display: flex;
    align-items: flex-end;
}
  div#shopify-section-template--15144452391006__flip_card_CGFMCY .card-content p {
      /* float: right !important;
      padding-left: 0px;
      padding-right: 0px; */
      max-width: 500px;
  }
  /* div#shopify-section-template--15144452391006__flip_card_CGFMCY .card__face--front div {
    margin-right: 10%;
} */
  div#shopify-section-template--15144452391006__flip_card_CGFMCY  .card-content p {max-width: 500px;}
}

/* For mobile */
@media only screen and (max-width: 767px) {
  .card {
    width: calc(100% / {{ section.settings.mobile_cards }} - 20px);
    margin-bottom: 20px;
  }
  .shopify-section#shopify-section-template--15144452391006__flip_card_CGFMCY .card {
    width: calc(100% / 1 - 20px);
    margin-bottom: 20px;
  }
  .shopify-section#shopify-section-template--15144452391006__flip_card_qJ6JyA .card {
    width: calc(100% / 1 - 20px);
    margin-bottom: 20px;
  }  
  .scene {
    justify-content: center;
  }
}
.card-content h2 {
  margin-bottom: 10px;
  white-space: normal; /* Allow text to wrap */
  overflow: hidden; /* Hide overflow text */
  text-overflow: unset; /* Disable ellipsis */
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var cards = document.querySelectorAll('.card');

  cards.forEach(function(card) {
    var frontFace = card.querySelector('.card__face--front');
    var backFace = card.querySelector('.card__face--back');

    frontFace.style.opacity = "1";
    backFace.style.opacity = "0";

    var backgroundImageUrl = card.style.backgroundImage.replace(/url\(['"](.+)['"]\)/, '$1');
    if (backgroundImageUrl) {
      var backgroundImage = new Image();
      backgroundImage.src = backgroundImageUrl;
      backgroundImage.onload = function() {
        card.style.height = backgroundImage.height + 'px';
      };
    }

    var plusButton = card.querySelector('.toggle-card-plus');
    plusButton.addEventListener('click', function(event) {
      event.stopPropagation();
      frontFace.style.opacity = "0";
      backFace.style.opacity = "1";
    });

    var minusButton = card.querySelector('.toggle-card-minus');
    minusButton.addEventListener('click', function(event) {
      event.stopPropagation();
      frontFace.style.opacity = "1";
      backFace.style.opacity = "0";
    });
  });
});
  
</script>