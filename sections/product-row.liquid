<style>
  .product-row__title {
  text-align: center;
  margin-bottom: 30px;
}

.product-row__slider {
  margin: 0 auto;
}

.product-row__item {
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  margin: 0 10px;
  background: #fff;
}

.product-row__image {
  width: 100%;
  height: auto;
}

.product-row__item-title {
  padding: 10px;
  text-align: center;
}

.slick-prev, .slick-next {
    display: none !important;
}

.custom-arrow {
    position: absolute;
    top: 50%;
    right: 10px;
    cursor: pointer;
    z-index: 10;
}


</style>

<div class="product-row relative">
  <h2 class="product-row__title">{{ section.settings.section_title }}</h2>
  <div class="product-row__slider">
    {% for block in section.blocks %}
    <div class="product-row__item">
      <a href="{{ block.settings.link }}">
        <img class="product-row__image" src="{{ block.settings.image | img_url: '600x600' }}" alt="{{ block.settings.title }}" />
        <p class="product-row__item-title">{{ block.settings.title }}</p>
      </a>
    </div>
    {% endfor %}
  </div>
  {% render 'arrow-button' %}

</div>





<script>
jQuery(document).ready(function(){
    console.log('Attempting to initialize Slick Slider...');
    jQuery('.product-row__slider').slick({
        infinite: true,
        slidesToShow: 5.5,
        slidesToScroll: 1,
        arrows: false, // Disable the default arrows
        responsive: [
            {
                breakpoint: 768,
                settings: {
                    slidesToShow: 2.5
                }
            }
        ]
    });

    // Custom arrow click handler
    jQuery('#customNextArrow').on('click', function() {
        jQuery('.product-row__slider').slick('slickNext');
    });
});

</script>
  
  
{% schema %}
  {
    "name": "Product Row",
    "max_blocks": 8,
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Shop by category"
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Product Title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [{
      "name": "Product Row",
      "category": "Product"
    }]
  }
  {% endschema %}
  

