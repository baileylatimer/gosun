
<style>
  .mission-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 548px; /* Height of the desktop SVG */
  background-image: url('https://cdn.shopify.com/s/files/1/0789/1333/files/orange-bg-desktop.svg?v=1711328794'); /* URL to your desktop SVG */
  background-size: cover;
  background-position: top center;
  z-index: -1;
}

@media (max-width: 767px) {
  .mission-section::before {
    height: 424px; /* Height of the mobile SVG */
    background-image: url('https://cdn.shopify.com/s/files/1/0789/1333/files/orange-bg-mobile.svg?v=1711328794'); /* URL to your mobile SVG */
  }
}

</style>

{% if section.settings.image or section.settings.text %}
  <div class="mission-section my-36 pt-36 relative">
    <div class="flex body-width gap-12 lg:gap-36 flex-col md:flex-row items-center space-y-4 md:space-y-0 md:space-x-4 ">
      {% if section.settings.image %}
      <div class="flex-1">
        <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.heading | escape }}">
      </div>
      {% endif %}
      
      <div class="flex-1">
        <h2 class="mb-12">{{ section.settings.heading }}</h2>
        
        {% for block in section.blocks %}
        <div class="flex items-center space-x-2 mb-4">
          {% if block.settings.row_image %}
          <img src="{{ block.settings.row_image | img_url: '24x24' }}" alt="" class="w-6 h-6">
          {% endif %}
          <p>{{ block.settings.text }}</p>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  {% endif %}

{% schema %}
  {
    "name": "Mission Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Main Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Your Heading Here"
      }
    ],
    "blocks": [
      {
        "type": "text_with_image",
        "name": "Text Row",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Your text here."
          },
          {
            "type": "image_picker",
            "id": "row_image",
            "label": "Row Image (24x24)"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Mission Section"
      }
    ]
  }
  {% endschema %}
  