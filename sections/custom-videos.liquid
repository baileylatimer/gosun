{% schema %}
{
  "name": "Custom Videos",
  "settings": [],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "text",
          "id": "video_url",
          "label": "Video URL",
          "default": "https://www.example.com/path/to/your/video.mp4"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "This is a title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "This is some text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Videos",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-videos">
  <div class="custom-videos__container">
    {% for block in section.blocks %}
      <div class="custom-videos__item">
        {% assign video_url = block.settings.video_url | strip %}
        {% if video_url != blank %}
          <div class="video-wrapper">
            <video controls autoplay muted loop>
              <source src="{{ video_url }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          </div>
        {% endif %}
        <h2>{{ block.settings.title }}</h2>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.custom-videos {
  text-align: center;
  padding: 20px;
}
.custom-videos__container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.custom-videos__item {
  flex: 1 1 calc(100% / {{ section.blocks | size }});
  box-sizing: border-box;
  padding: 10px;
  text-align: left; /* Adjust text alignment */
}
.video-wrapper {
  position: relative;
  width: 100%;
  padding-bottom: 56.25%; /* 16:9 aspect ratio */
  overflow: hidden;
  margin-bottom: 10px; /* Adjust margin between each video item */
}
.video-wrapper video {
  display: block;
  width: 100%; /* Ensure the video takes full width of its container */
  height: 100%; /* Ensure the video takes full height of its container */
  object-fit: cover; /* Maintain aspect ratio and fill the container */
}
.custom-videos__item h2 {
  font-size: 16px;
  margin-top: 10px;
  margin-bottom: 5px; /* Adjust margin between title and video */
}
.custom-videos__item p {
  font-size: 14px;
  margin-top: 0; /* Remove default top margin */
  margin-bottom: 10px; /* Adjust margin between text and video */
}
</style>




