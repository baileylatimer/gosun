{% schema %}
{
  "name": "Custom Videos",
  "blocks": [
    {
      "type": "video_item",
      "name": "Video Item",
      "settings": [
        {
          "type": "text",
          "id": "video_title",
          "label": "Video Title"
        },
        {
          "type": "textarea",
          "id": "video_description",
          "label": "Video Description"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Videos",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-videos">
  <div class="custom-videos__container">
    <div class="custom-videos__grid">
      {% for block in section.blocks %}
        <div class="custom-videos__item">
          <div class="video-wrapper">
            <iframe src="{{ block.settings.video_url }}" frameborder="0" allowfullscreen></iframe>
          </div>
          <p class="h4 mt-4">{{ block.settings.video_title }}</p>
          <p>{{ block.settings.video_description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.custom-videos__container {
  max-width: 1200px;
  margin: 0 auto;
}

.custom-videos__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  justify-items: center;
}

.custom-videos__item {
  text-align: center;
}

.custom-videos__item .video-wrapper {
  position: relative;
  padding-bottom: 56.25%; /* 16:9 aspect ratio (height:width) */
  overflow: hidden;
}

.custom-videos__item .video-wrapper iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.custom-videos__item p {
  margin-top: 5px;
  margin-bottom: 10px;
}
</style>
