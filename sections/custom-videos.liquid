{% schema %}
{
  "name": "Custom Videos",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Custom Videos Section"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Add a brief description about your custom videos."
    },
    {
      "type": "radio",
      "id": "layout_type",
      "label": "Layout Type",
      "options": [
        { "value": "full_width", "label": "Full Width" },
        { "value": "boxed", "label": "Boxed" },
        { "value": "custom", "label": "Custom" }
      ],
      "default": "full_width"
    },
    {
      "type": "checkbox",
      "id": "center_text",
      "label": "Center Text",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top_bottom",
      "label": "Padding Top and Bottom (rem)",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 9
    },
    {
      "type": "text",
      "id": "custom_max_width",
      "label": "Custom Max Width (px)",
      "default": "1200",
      "info": "Enter the custom max width in pixels."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "text",
          "id": "video_url",
          "label": "Video URL",
          "default": "https://www.example.com/path/to/your/video.mp4"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "This is a title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "This is some text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Videos",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-videos {% if section.settings.layout_type == 'full_width' %}layout-full_width{% elsif section.settings.layout_type == 'boxed' %}layout-boxed{% else %}layout-custom{% endif %}"
  style="padding-top: {{ section.settings.padding_top_bottom }}rem; padding-bottom: {{ section.settings.padding_top_bottom }}rem; {% if section.settings.layout_type == 'custom' and section.settings.custom_max_width != blank %}max-width: {{ section.settings.custom_max_width }}px; margin: 0 auto;{% endif %}; background-color: {{ section.settings.background_color }};">
  <div class="custom-videos__container {% if section.settings.center_text %}text-center{% endif %}">
    {% if section.settings.layout_type == 'custom' %}
      <div class="custom-max-width">
        <label for="custom_max_width">Custom Max Width (px)</label>
        <input type="text" id="custom_max_width" name="custom_max_width" value="{{ section.settings.custom_max_width }}">
      </div>
    {% endif %}
    <div class="custom-videos__header {% if section.settings.center_text %}text-center{% endif %}">
      <h2 id="section_title" class="text-center mt-6 mb-24">{{ section.settings.section_title }}</h2>
      <p>{{ section.settings.section_description }}</p>
    </div>
    <div class="custom-videos__grid">
      {% for block in section.blocks %}
        <div class="custom-videos__item">
          {% assign video_url = block.settings.video_url | strip %}
          {% if video_url != blank %}
            <div class="video-wrapper">
              <video controls autoplay muted loop>
                <source src="{{ video_url }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
          {% endif %}
          <p class="h4 mt-4">{{ block.settings.title }}</p>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.custom-videos {
  text-align: center;
}

.custom-videos__header {
  margin-bottom: 20px;
}

.custom-videos__header p {
  font-size: 16px;
}

.custom-videos__container {
  text-align: center;
}

.custom-videos__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  justify-items: center;
}

.custom-videos__item {
  text-align: center; /* Center align video item content */
}

.custom-videos .text-center {
  text-align: center;
}

.custom-videos.layout-full_width .custom-videos__grid {
  margin-left: -20px;
  margin-right: -20px;
}

.custom-videos.layout-boxed {
  padding-left: 9rem;
  padding-right: 9rem;
}

.custom-videos.layout-custom {
  /* No specific styles needed unless you want to customize further */
}

.custom-videos__item .video-wrapper {
  position: relative;
  width: 100%; /* Ensure the video takes full width of its container */
  overflow: hidden;
  margin-bottom: 20px; /* Adjust margin between each video item */
}

.custom-videos__item .video-wrapper video {
  display: block;
  width: 100%; /* Ensure the video takes full width of its container */
  height: auto; /* Let the video's height adjust based on aspect ratio */
  object-fit: cover; /* Maintain aspect ratio and fill the container */
}

@media (max-width: 768px) {
  .custom-videos__grid {
    grid-template-columns: 1fr;
    gap: 10px;
  }
  .custom-videos.layout-boxed,
  .custom-videos.layout-custom {
    padding-left: 20px;
    padding-right: 20px;
  }
}

.custom-max-width {
  display: none; /* Hide by default */
  margin-top: 10px;
}

.custom-videos.layout-custom .custom-max-width {
  display: block; /* Show only when layout_type is custom */
}

.custom-max-width label {
  display: block;
  margin-bottom: 5px;
}

.custom-max-width input[type="text"] {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  font-size: 14px;
}
</style>
