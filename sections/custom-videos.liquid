{% schema %}
{
  "name": "Custom Videos",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Custom Videos Section"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Add a brief description about your custom videos."
    },
    {
      "type": "radio",
      "id": "layout_type",
      "label": "Layout Type",
      "options": [
        { "value": "full_width", "label": "Full Width" },
        { "value": "boxed", "label": "Boxed" }
      ],
      "default": "full_width"
    },
    {
      "type": "checkbox",
      "id": "center_text",
      "label": "Center Text",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top_bottom",
      "label": "Padding Top and Bottom (rem)",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 9
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "video_item",
      "name": "Video Item",
      "settings": [
        {
          "type": "text",
          "id": "video_title",
          "label": "Video Title"
        },
        {
          "type": "textarea",
          "id": "video_description",
          "label": "Video Description"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Videos",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-videos {% if section.settings.layout_type == 'boxed' %}layout-boxed{% else %}layout-full_width{% endif %}"
  style="padding-top: {{ section.settings.padding_top_bottom }}rem; padding-bottom: {{ section.settings.padding_top_bottom }}rem; background-color: {{ section.settings.background_color }};">
  <div class="custom-videos__header {% if section.settings.center_text %}text-center{% endif %}">
    <h2 id="section_title" class="text-center mt-6 mb-24">{{ section.settings.section_title }}</h2>
    <p>{{ section.settings.section_description }}</p>
  </div>
  <div class="custom-videos__container {% if section.settings.center_text %}text-center{% endif %}">
    {% for block in section.blocks %}
      <div class="custom-videos__item">
        <div class="video-wrapper">
          <iframe src="{{ block.settings.video_url }}" frameborder="0" allowfullscreen></iframe>
        </div>
        <p class="h4 mt-4">{{ block.settings.video_title }}</p>
        <p>{{ block.settings.video_description }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.custom-videos {
  padding: 20px;
}

.custom-videos__header {
  margin-bottom: 20px;
}

.custom-videos__header p {
  font-size: 16px;
}

.custom-videos__container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.custom-videos__item {
  flex: 1 1 100%; /* Each item takes full width */
  box-sizing: border-box;
  padding: 10px;
  text-align: center; /* Center align video item content */
}

.custom-videos .text-center {
  text-align: center;
}

.custom-videos.layout-full_width .custom-videos__container {
  margin-left: 0;
  margin-right: 0;
}

@media (min-width: 768px) {
  .custom-videos.layout-boxed .custom-videos__container {
    margin-left: 9rem;
    margin-right: 9rem;
  }
}

.custom-videos__item .video-wrapper {
  position: relative;
  padding-bottom: 56.25%; /* 16:9 aspect ratio (height:width) */
  overflow: hidden;
}

.custom-videos__item .video-wrapper iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.custom-videos__item p {
  margin-top: 5px;
  margin-bottom: 10px;
}
</style>
