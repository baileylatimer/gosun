{% if section.settings.show_elcat_landing_page_numbers_section == true %}

  <section class="numbers_sec ">
    
    <div class="body-width br bg-primary-light py-12 flex flex-col justify-center">
      
      <div class="flex flex-col lg:flex-row justify-center gap-12">
    
        <div class="cruisespeed_div flex flex-col justify-center">
          <h3 class="mb-6 text-center">Cruise Speed</h3>
          <img width="100" height="100" src="https://cdn.shopify.com/s/files/1/0789/1333/files/cruise.png?v=1708377219" />
           <div class="chart" data-percent="50" data-scale-color="#ffb400">3 mph</div>
        </div>  
  
        <div class="cruisespeed_div flex flex-col justify-center">
          <h3 class="mb-6 text-center">Top Speed</h3>
          <img width="100" height="100" src="https://cdn.shopify.com/s/files/1/0789/1333/files/cruise.png?v=1708377219" />     
          <div class="chart2" data-percent="100" data-scale-color="#ffb400">6 mph</div>
        </div>  
  
  
        <div class="cruisespeed_div flex flex-col justify-center">
          <h3 class="mb-6 text-center">Range</h3>
          <img width="100" height="100" src="https://cdn.shopify.com/s/files/1/0789/1333/files/cruise.png?v=1708377219" />  
          <div class="chart3" data-percent="50" data-scale-color="#ffb400">25 miles</div>
        </div>  
  
  
        <div class="cruisespeed_div flex flex-col justify-center">
          <h3 class="mb-6 text-center">Extended Range</h3>
          <img width="100" height="100" src="https://cdn.shopify.com/s/files/1/0789/1333/files/cruise.png?v=1708377219" />    
          <div class="chart4" data-percent="100" data-scale-color="#ffb400">50 miles</div>
        </div>  
        
      </div>
      
      <div class="row mt-12">
        <p class="numbersec_para text-center">(Duration at cruise speed at 3mph on single battery: 25 miles in 8:20. Duration at Top Speed 6 MPH: 10 Miles in 1:40. Actual results may vary due to wind, load, and current)</p>
      </div>
      
    </div>
    
  </section>
  
  
  {% endif %}
  
  {% schema %}
  {
    "name": "Numbers Section",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_elcat_landing_page_numbers_section",
        "label": "Numbers Section",
        "default": false
      }
    ],
    "presets": [
    {
      "name": "Boat Numbers"
    }
  ]
  }
  {% endschema %}
  
  {% stylesheet %}
    
  .numbers_sec .row_flex {
      display: flex;
    justify-content: space-evenly;
  }
  
    .numbers_sec {
      padding: 55px 0;
  }
  

  
  
  .circle {
    width: 200px;
      margin: 6px 20px 20px;
      display: inline-block;
      position: relative;
      text-align: center;
    vertical-align: top;
    }
    
  .circle strong {
      position: absolute;
      top: 70px;
      left: 0;
      width: 100%;
      text-align: center;
      line-height: 45px;
      font-size: 43px;
  }
  
  
    
  .cruisespeed_div img {
      margin: 0 auto;
      display: block;
          width: 50px;
  }
  
   .cruisespeed_div h2 {
    display: block;
    text-align: center;
    color: #fff;
  }
  
   .cruisespeed_div .chart {
  position: relative;
      width: 100%;
      height: 100%;
      text-align: center;
      font-size: 35px;
      font-weight: 500;
  }
  
     .cruisespeed_div .chart2 {
   position: relative;
      width: 100%;
      height: 100%;
      text-align: center;
      font-size: 35px;
      font-weight: 500;
  }
  
     .cruisespeed_div .chart3 {
  position: relative;
      width: 100%;
      height: 100%;
      text-align: center;
      font-size: 35px;
      font-weight: 500;
  }
  
     .cruisespeed_div .chart4 {
  position: relative;
      width: 100%;
      height: 100%;
      text-align: center;
      font-size: 35px;
      font-weight: 500;
  }
  
   .cruisespeed_div canvas {
    position: absolute;
    top: 0;
    left: 0;
       width: 200px;
      margin-top: 30px;
      left: 50%;
      transform: translateX(-50%);
  
     .numbersec_para {
       font-size: 12px;

      padding-top: 25px;
      font-style: italic;
  }
  
  {% endstylesheet %}
  
  {% javascript %}
  
  $(function() {
    $('.chart').easyPieChart({
      size: 200,
      barColor: "#288bcc",
      scaleLength: 0,
      lineWidth: 5,
      trackColor: "#373737",
      lineCap: "circle",
      animate: 2000,
    });
  
