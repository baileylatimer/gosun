{% schema %}
{
  "name": "Custom Logos",
  "settings": [
    {
      "type": "radio",
      "id": "layout_type",
      "label": "Layout Type",
      "options": [
        { "value": "full_width", "label": "Full Width" },
        { "value": "boxed", "label": "Boxed" }
      ],
      "default": "full_width"
    }
  ],
  "blocks": [
    {
      "type": "logo_item",
      "name": "Logo Item"
    }
  ],
  "presets": [
    {
      "name": "Custom Logos",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% assign layout_class = 'layout-full_width' %}
{% if section.settings.layout_type == 'boxed' %}
  {% assign layout_class = 'layout-boxed' %}
{% endif %}

<div class="custom-logos {{ layout_class }}">
  <div class="custom-logos__container">
    {% for block in section.blocks %}
      <div class="custom-logos__item">
        <img src="{{ block.settings.logo_image | img_url: 'master' }}" alt="{{ block.settings.logo_alt_text }}">
        <h3>{{ block.settings.logo_title }}</h3>
        <p>{{ block.settings.logo_description }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.custom-logos {
  text-align: center;
  padding: 20px;
}

.custom-logos__container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.custom-logos__item {
  flex: 1 1 calc(100% / {{ section.blocks | size }});
  box-sizing: border-box;
  padding: 10px;
}

/* Full Width Layout */
.custom-logos.layout-full_width .custom-logos__container {
  margin-left: 0;
  margin-right: 0;
}

/* Boxed Layout - Desktop Only */
@media (min-width: 768px) {
  .custom-logos.layout-boxed .custom-logos__container {
    margin-left: 9rem;
    margin-right: 9rem;
  }
}

.custom-logos__item img {
  max-width: 100%;
  height: auto;
}

.custom-logos__item h3 {
  font-size: 18px;
  margin-top: 10px;
}

.custom-logos__item p {
  font-size: 14px;
  margin-top: 5px;
  margin-bottom: 10px;
}
</style>
