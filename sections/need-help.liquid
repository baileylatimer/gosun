<div class="container mx-auto px-4 my-36">
  <h2 class="text-center my-6" id="section_title">{{ section.settings.section_title }}</h2>
  <div class="flex flex-col sm:flex-row justify-between gap-4">
    <div class="flex flex-col items-start p-4 lg:w-1/3">
      {% render 'icon-chat' %}
      <p class="h4 mt-4">Chat with us</p>
      <p class="mt-2">Our award-winning customer service can answer any of your questions.</p>
    </div>
    <div class="flex flex-col items-start p-4 lg:w-1/3">
      {% render 'icon-phone' %}
      <p class="h4 mt-4">Give us a ring</p>
      <p class="mt-2 ">Our Solar Specialists are here to help you find the perfect fit. Just give us a call at +1 888.868.6154</p>
    </div>
    <div class="flex flex-col items-start p-4 lg:w-1/3">
      {% render 'icon-shield' %}
      <p class="h4 mt-4">30-day money back guarantee</p>
      <p class="mt-2 ">Shop with confidence with our 30-day money-back guarantee. If you're not completely satisfied, return it within 30 days for a full refund, no questions asked.</p>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Need help deciding?",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Need help deciding?"
    }
  ],
  "presets": [
    {
      "name": "Need help deciding?"
    }
  ]
}

{% endschema %}